<div class="container mx-auto p-8">

    <h1 class="text-4xl font-bold text-gray-900 mb-8">Upload Ảnh PNG</h1>

    <% if (typeof uploadError !== 'undefined' && uploadError) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
            <strong class="font-bold">Lỗi Upload:</strong>
            <span class="block sm:inline"> <%= uploadError %></span>
        </div>
    <% } %>

    <form action="/upload" method="POST" enctype="multipart/form-data" class="bg-white p-6 rounded-lg shadow-xl mb-10">
        <label class="block text-gray-700 text-sm font-bold mb-2">
            Chọn File Ảnh (PNG, max 1MB mỗi file)
        </label>

        <input
                type="file"
                name="uploaded_images"
                multiple
                accept="image/png"
                class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100"
        >

        <button
                type="submit"
                class="mt-6 bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline transition duration-150"
        >
            Upload Ảnh
        </button>
    </form>

    <hr class="my-8">

    <% if (typeof uploadedFiles !== 'undefined' && uploadedFiles.length > 0) { %>
        <h2 class="text-3xl font-bold text-green-700 mb-6">✅ Ảnh Đã Upload Thành Công:</h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% uploadedFiles.forEach(function(file) { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="<%= file.path %>" alt="<%= file.filename %>" class="w-full h-48 object-cover">
                    <div class="p-3 text-center">
                        <p class="text-sm text-gray-600 truncate"><%= file.filename %></p>
                    </div>
                </div>
            <% }); %>
        </div>

    <% } else if (typeof uploadedFiles !== 'undefined' && uploadedFiles.length === 0 && !uploadError) { %>
        <p class="text-gray-500">Chưa có ảnh nào được upload thành công.</p>
    <% } %>

</div>